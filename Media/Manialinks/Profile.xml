<script><!--

main() 
{
	declare persistent Boolean ShowStunts for LocalUser; //náročnosť!

	sleep(100);
	(Page.GetFirstChild("0") as CMlLabel).SetText(LocalUser.Name);
	(Page.GetFirstChild("img") as CMlQuad).ImageUrl = LocalUser.AvatarUrl;
	
	EnableMenuNavigation(True, False, Page.GetFirstChild("xko"), 1);
		
	while(True){
		
	(Page.GetFirstChild("stnt") as CMlLabel).SetText(""^ShowStunts);
        foreach (Event in PendingEvents) {
			if (Event.Type == CMlEvent::Type::MenuNavigation) {
				if (Event.MenuNavAction == CMlEvent::EMenuNavAction::Cancel)	{
					SendCustomEvent("BackToMainMenu", [""]);
				}
			}
            if (Event.Type ==  CMlEvent::Type::MouseClick) {
				if (Event.ControlId == "stnt") {
				if(!ShowStunts)			
					ShowStunts = True;
				else 
					ShowStunts = False;
				}
				if (Event.ControlId == "xko") {
					SendCustomEvent("menu_main", [""]);
				}	
					
			}		
		}
		yield;
	}	   
}

--></script>

